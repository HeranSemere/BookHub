<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:clickable="true"
    android:focusable="true"
    android:layout_marginBottom="7dp"
    android:foreground="?selectableItemBackground">
    <RelativeLayout
android:padding="10dp"
        android:id="@+id/rl_wrapper"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/book_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/bookPic"
                android:layout_width="130dp"
                android:scaleType="fitXY"
                android:layout_height="170dp"
                android:layout_marginEnd="5dp"
                tools:src="@drawable/obamas_book" />

        <LinearLayout
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <View
                android:layout_width="0dp"
                android:layout_weight="0"
                android:layout_height="0dp"/>


            <TextView
                android:id="@+id/bookTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                tools:text="A Promised Land"
                android:textSize="20sp" />
            <View
                android:layout_width="0dp"
                android:layout_weight="0"
                android:layout_height="0dp"/>

            <TextView
                android:id="@+id/bookGenre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Memoir"
                android:textSize="17sp" />
            <TextView
                android:id="@+id/bookPages"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="700 Pages"
                android:textSize="17sp" />
            <TextView
                android:id="@+id/bookAuthor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Auther: Baracl Obama"
                android:textSize="17sp" />





        </LinearLayout>


            <LinearLayout
                android:clickable="true"
                android:focusable="true"
                android:id="@+id/owners_profile"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/ownerProfilePic"
                    android:layout_marginTop="40dp"
                    android:layout_width="wrap_content"
                    android:layout_gravity="center"
                    android:layout_height="60dp"
                    tools:src="@drawable/profile_pic" />
                <TextView
                    android:id="@+id/ownerName"
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="sarah"
                    android:layout_gravity="center"
                    android:textSize="14sp" />
                <ImageView
                    android:id="@+id/rating"
                    android:layout_width="wrap_content"
                    android:layout_gravity="center"
                    android:layout_height="13dp"
                    tools:src="@drawable/rating" />


            </LinearLayout>

        </LinearLayout>



    </RelativeLayout>

</androidx.cardview.widget.CardView>
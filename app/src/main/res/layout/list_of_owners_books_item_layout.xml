<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:focusable="true"
    android:layout_marginBottom="7dp"
    android:foreground="?selectableItemBackground"
    xmlns:tools="http://schemas.android.com/tools">

        <LinearLayout
            android:paddingTop="8dp"
            android:paddingBottom="8dp"

            android:paddingLeft="25dp"
            android:id="@+id/book_details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/listbookPic"
                android:layout_width="130dp"
                android:scaleType="fitXY"
                android:layout_height="170dp"
                android:layout_marginEnd="5dp"
                tools:src="@drawable/obamas_book" />

            <View
                android:layout_width="15dp"
                android:layout_weight="0"
                android:layout_height="0dp"/>

            <LinearLayout
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">




                <TextView
                    android:id="@+id/listbookTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    tools:text="A Promised Land"
                    android:textSize="20sp" />
                <View
                    android:layout_width="0dp"
                    android:layout_weight="0"
                    android:layout_height="0dp"/>

                <TextView
                    android:id="@+id/listbookGenre"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="Memoir"
                    android:textSize="17sp" />
                <TextView
                    android:id="@+id/listbookPages"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="700 Pages"
                    android:textSize="17sp" />
                <TextView
                    android:id="@+id/listbookAuthor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="Auther: Baracl Obama"
                    android:textSize="17sp" />





            </LinearLayout>




        </LinearLayout>





</androidx.cardview.widget.CardView>
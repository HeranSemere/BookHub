<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/wizard_parent"
    android:layout_gravity="center"
    android:layout_height="wrap_content">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/wizard_register_icon"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="150dp"
            app:srcCompat="@drawable/ic_outline_account_circle_24"
            app:tint="@color/colorPrimaryDark"
            android:layout_height="150dp"/>
        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/wizard_register_name"
            android:layout_width="300dp"
            android:hint="Full Name"
            app:drawableStartCompat="@drawable/ic_baseline_person_24"
            android:drawablePadding="10dp"
            android:background="@drawable/edittext_bg"
            android:layout_margin="10dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/wizard_register_icon"
            android:layout_height="wrap_content"/>
        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/wizard_register_username"
            android:layout_width="300dp"
            android:hint="Email/Phone"
            app:drawableStartCompat="@drawable/ic_baseline_phone_24"
            android:drawablePadding="10dp"
            android:background="@drawable/edittext_bg"
            android:layout_margin="10dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/wizard_register_name"
            android:layout_height="wrap_content"/>
        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/wizard_register_address"
            android:layout_width="300dp"
            android:hint="Address"
            app:drawableStartCompat="@drawable/ic_baseline_location_on_24"
            android:drawablePadding="10dp"
            android:background="@drawable/edittext_bg"
            android:layout_margin="10dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/wizard_register_username"
            android:layout_height="wrap_content"/>
        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/wizard_register_password"
            android:layout_width="300dp"
            android:hint="password"
            android:background="@drawable/edittext_bg"
            android:layout_margin="10dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:drawableStartCompat="@drawable/ic_baseline_vpn_key_24"
            android:drawablePadding="10dp"
            app:layout_constraintTop_toBottomOf="@id/wizard_register_address"
            android:layout_height="wrap_content"
            />
        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/wizard_register_confirm_password"
            android:layout_width="300dp"
            app:drawableStartCompat="@drawable/ic_baseline_vpn_key_24"
            android:drawablePadding="10dp"
            android:hint="confirm password"
            android:background="@drawable/edittext_bg"
            android:layout_margin="10dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/wizard_register_password"
            android:layout_height="wrap_content"
            />
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/wizard_register_login"
            android:layout_width="300dp"
            android:layout_margin="15dp"
            android:text="Register"
            android:textColor="@color/white"
            android:background="@drawable/button_bg_green"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/wizard_register_confirm_password"
            android:layout_height="wrap_content"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>
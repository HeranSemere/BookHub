<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/wizard_parent"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#252525">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/wizard_register_icon"
                android:layout_width="150dp"
                android:layout_height="150dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_outline_account_circle_24"
                app:tint="@color/white" />

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/wizard_register_name"
                android:inputType="textPersonName"
                style="@style/whiteTextView"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/edittext_bg"
                android:drawablePadding="10dp"
                android:hint="Full Name"
                app:drawableStartCompat="@drawable/ic_baseline_person_24"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/wizard_register_icon" />

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/wizard_register_username"
                style="@style/whiteTextView"
                android:layout_width="300dp"
                android:inputType="textPersonName"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/edittext_bg"
                android:drawablePadding="10dp"
                android:hint="Email/Phone"
                app:drawableStartCompat="@drawable/ic_baseline_phone_24"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/wizard_register_name" />

            <androidx.appcompat.widget.AppCompatEditText
                android:inputType="textPersonName"
                android:id="@+id/wizard_register_address"
                style="@style/whiteTextView"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/edittext_bg"
                android:drawablePadding="10dp"
                android:hint="Address"
                app:drawableStartCompat="@drawable/ic_baseline_location_on_24"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/wizard_register_username" />

            <androidx.appcompat.widget.AppCompatEditText
                android:inputType="textPassword"
                android:id="@+id/wizard_register_password"
                style="@style/whiteTextView"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/edittext_bg"
                android:drawablePadding="10dp"
                android:hint="password"
                app:drawableStartCompat="@drawable/ic_baseline_vpn_key_24"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/wizard_register_address" />

            <androidx.appcompat.widget.AppCompatEditText
                android:inputType="textPassword"
                android:id="@+id/wizard_register_confirm_password"
                style="@style/whiteTextView"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/edittext_bg"
                android:drawablePadding="10dp"
                android:hint="confirm password"
                app:drawableStartCompat="@drawable/ic_baseline_vpn_key_24"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/wizard_register_password" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/wizard_register_login"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:background="@drawable/button_bg_green"
                android:text="Register"
                android:textColor="@color/white"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/wizard_register_confirm_password" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>
</FrameLayout>